{
  "type": "object",
  "javaType": "io.cncf.serverlessworkflow.api.branches.Branch",
  "description": "Branch Definition",
  "properties": {
    "name": {
      "type": "string",
      "description": "Branch name"
    },
    "states": {
      "type": "array",
      "description": "State Definitions",
      "items": {
        "type": "object",
        "existingJavaType": "io.cncf.serverlessworkflow.api.interfaces.State"
      }
    },
    "waitForCompletion": {
      "type": "boolean",
