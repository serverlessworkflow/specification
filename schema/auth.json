{
  "$id": "https://serverlessworkflow.io/schemas/0.7/auth.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Serverless Workflow specification - auth schema",
  "type": "object",
  "auth": {
    "oneOf": [
      {
        "type": "string",
        "format": "uri",
        "description": "URI to a resource containing auth definitions (Json or Yaml)"
      },
      {
        "type": "array",
        "description": "Workflow auth definitions",
        "items": {
          "type": "object",
          "$ref": "#/definitions/authdef"
        },
        "additionalItems": false,
        "minItems": 1
      }
    ]
  },
  "required": [
    "auth"
  ],
  "definitions": {
    "authdef": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Unique auth name",
          "minLength": 1
        },
        "scheme": {
          "type": "string",
          "description": "Defines the auth type",
          "enum": [
            "basic",
            "bearer",
            "oidc"
          ],
          "default": "basic"
        },
        "info": {
          "oneOf": [
            {
              "type": "string",
              "description": "Expression referencing a workflow secret that contains all needed auth info"
            },
            {
              "oneOf": [
                {
                  "title": "Basic Auth Info",
                  "$ref": "#/definitions/basicinfodef"
                },
                {
                  "title": "Bearer Auth Info",
                  "$ref": "#/definitions/bearerinfodef"
                },
                {
                  "title": "Oidc Auth Info",
                  "$ref": "#/definitions/oidcinfodef"
                }
                ]
            }
          ]
        }
      }
    },
    "basicinfodef": {
      "oneOf": [
        {
          "type": "string",
          "description": "Expression referencing a workflow secret that contains all needed basic auth info"
        },
        {
          "type": "object",
          "description": "Basic auth information",
          "properties": {
            "username": {
              "type": "string",
              "description": "String or a workflow expression. Contains the user name",
              "minLength": 1
            },
            "password": {
              "type": "string",
              "description": "String or a workflow expression. Contains the user password",
              "minLength": 1
            }
          },
          "required": ["username", "password"],
          "additionalItems": false
        }
      ]
    },
    "bearerinfodef": {
      "oneOf": [
        {
          "type": "string",
          "description": "Expression referencing a workflow secret that contains all needed bearer auth info"
        },
        {
          "type": "object",
          "description": "Bearer auth information",
          "properties": {
            "token": {
              "type": "string",
              "description": "String or a workflow expression. Contains the token",
              "minLength": 1
            }
          },
          "required": ["token"],
          "additionalItems": false
        }
      ]
    },
    "oidcinfodef": {
      "oneOf": [
        {
          "type": "string",
          "description": "Expression referencing a workflow secret that contains all needed oidc auth info"
        },
        {
          "type": "object",
          "description": "Oidc auth information",
          "properties": {
            "grantType": {
              "type": "string",
              "description": "Defines the auth type",
              "enum": [
                "resourceOwner",
                "clientCredentials",
                "tokenExchange"
              ],
              "default": "basic"
            },
            "clientId": {
              "type": "string",
              "description": "String or a workflow expression. Contains the client id",
              "minLength": 1
            },
            "clientSecret": {
              "type": "string",
              "description": "String or a workflow expression. Contains the client secret",
              "minLength": 1
            },
            "scope": {
              "type": "string",
              "description": "String or a workflow expression. Contains the oidc other scopes",
              "minLength": 1
            },
            "username": {
              "type": "string",
              "description": "String or a workflow expression. Contains the user name. Only used when grantType is resourceOwner",
              "minLength": 1
            },
            "password": {
              "type": "string",
              "description": "String or a workflow expression. Contains the user password. Only used when grantType is resourceOwner",
              "minLength": 1
            }
          },
          "required": ["clientId"],
          "additionalItems": false
        }
      ]
    }
  }
}