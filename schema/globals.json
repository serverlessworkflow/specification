{
  "$id": "https://serverlessworkflow.org/core/functions.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Serverless Workflow specification - globals schema",
  "type": "object",
  "globals": {
    "oneOf": [
      {
        "type": "string",
        "format": "uri",
        "description": "URI to a resource containing globals definitions (json or yaml)"
      },
      {
        "type": "array",
        "description": "Workflow globals definitions",
        "items": {
          "type": "object",
          "$ref": "#/definitions/global"
        },
        "additionalItems": false,
        "minItems": 1
      }
    ]
  },
  "required": [
    "globals"
  ],
  "definitions": {
    "global": {
      "type": "object",
      "properties": {
        "nameSpace": {
          "type": "string",
          "description": "Namespace through which this global can be accessed",
          "minLength": 1,
          "not": {"enum":["SECRETS", "."]}
        },
        "name": {
          "type": "string",
          "description": "Global name (unique to its namespace)",
          "minLength": 1
        },
        "value": {
          "oneOf": [
            {
              "type": "string",
              "description": "Global string value",
              "minLength": 1
            },
            {
              "type": "boolean",
              "description": "Global boolean value"
            },
            {
              "type": "number",
              "description": "Global number value"
            },
            {
              "type": "array",
              "description": "Global array value"
            },
            {
              "type": "object",
              "description": "Global object value"
            }
          ]
        }
      },
      "additionalProperties": false,
      "required": [
        "nameSpace",
        "name",
        "value"
      ]
    }
  }
}